<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.asiatravel.atdragviewdemo.ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.asiatravel.atdragviewdemo.customview.ATDragView
        android:id="@+id/at_dragView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin" />

    <com.asiatravel.atdragviewdemo.customview.SwitchView
        android:id="@+id/switch_view1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:switch_bg_strock_width="2dp" />

    <com.asiatravel.atdragviewdemo.customview.SwitchView
        android:id="@+id/switch_view2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:switch_ball_color="@android:color/holo_blue_light"
        app:switch_bg_open_color="@android:color/holo_orange_light"
        app:switch_bg_strock_width="2dp" />

    <com.asiatravel.atdragviewdemo.customview.CountDownCircleView
        android:id="@+id/countdown_circle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_horizontal_margin" />


    <com.asiatravel.atdragviewdemo.customview.MyElongVerticalTextView
        android:id="@+id/vt_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="QQ专属垂直"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="跳转"
        android:textColor="@color/colorAccent" />

</LinearLayout>
